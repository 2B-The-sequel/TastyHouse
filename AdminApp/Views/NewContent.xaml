<Window x:Class="AdminApp.Views.NewContent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminApp.Views"
        mc:Ignorable="d"
        Title="NewContent" Height="450" Width="800">
    <StackPanel>
        <DockPanel>
            <Label Content="Navn til indhold"/>
            <TextBox Name="ContentName" Width="200" HorizontalAlignment="Right" Margin="5"/>
        </DockPanel>
        <DockPanel>
            <Label Content="Pris til ekstra"/>
            <TextBox Name="ExstraPrice" Width="200" HorizontalAlignment="Right" Margin="5"/>
        </DockPanel>
        <DockPanel>
            <Button Content="OK" HorizontalAlignment="Right" VerticalAlignment="Top" Click="AddNewContent" Margin="5" Width="75" Height="42"/>
            <Button Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Cancel" Margin="5" Width="75" Height="42"/>
        </DockPanel>
    </StackPanel>
</Window>
